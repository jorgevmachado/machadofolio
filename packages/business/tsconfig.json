{
  "extends": "@repo/typescript/library.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@repo/services": ["../services"],
      "@repo/services/*": ["../services/*"]
    },
    "incremental": false,
    "esModuleInterop": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "target": "ES2022"
  }
}
