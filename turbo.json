{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["ENV", "API", "PORT"],
  "globalDependencies": [
    "**/.env.*local",
    "**/.env.*mock",
    "ENV",
    "API",
    "PORT"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
