{
  "extends": "@repo/typescript/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "ESNext",
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "paths": {
