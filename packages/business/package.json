{
  "name": "business",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/**"
  ],
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "gen": "turbo gen business",
    "gen:module:nest": "turbo gen business-module-nest",
    "dev": "echo 'Add dev script here'",
    "build": "rimraf dist && tsc -b -v",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 0 --fix"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/jest": "*",
    "@repo/typescript": "*",
    "@repo/services": "*",
    "@types/node": "^22.15.3",
    "glob": "^11.0.2",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}
