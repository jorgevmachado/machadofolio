{
  "extends": "@repo/typescript/library.json",
  "include": ["src"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@repo/services": ["../services"],
      "@repo/services/*": ["../services/*"]
    },
    "allowJs": true,
    "incremental": false,
    "esModuleInterop": true
  }
}
